<div class="page-wrapper">
  <div class="container">
    <h2>Videos</h2>
    {{> _messages}}
    {{#each ideas}}
      <div class="card card-body idea-video">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        
        <form method="post" action="/ideas/{{id}}?_method=DELETE">
          <a href="/ideas/edit/{{id}}" class="btn btn-primary btn-edit">Edit</a>
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-outline-danger" value="Delete">
        </form>
      </div>
    {{else}}
      <p>No video ideas available</p>
    {{/each}}
  </div>
</div>


